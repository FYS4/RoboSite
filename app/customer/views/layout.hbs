<!DOCTYPE html>
<html lang="nl">

<head>
  <!-- Manifest -->
  <link rel="manifest" href="/manifest.json">

  <!-- Title -->
  {{#if title}}
    <title>{{title}}</title>
  {{else}}
    <title>RoboBooth</title>
  {{/if}}
  <!-- Meta -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="Website voor de foto's van de RoboBooth">
  <meta name="author" content="Martijn Vegter">

  <!-- Icons -->
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
  <link rel="icon" href="/favicon.ico" type="image/x-icon" />

  <!-- Stylesheets -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha256-eZrrJcwDc/3uDhsdt61sL2oOBY362qM3lon1gyExkL0=" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css" integrity="sha256-e22BQKCF7bb/h/4MFJ1a4lTRR2OuAe8Hxa/3tgU5Taw=" crossorigin="anonymous" />
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  {{#if user}}
    <nav>
      <div class="nav-wrapper" style="padding-right: 5%;">
        <a href="/" class="brand-logo center">
          RoboBooth
        </a>
        <a href="#" data-activates="mobile-demo" class="button-collapse">
          <i class="fa fa-bars" aria-hidden="true"></i>
        </a>

        <ul class="right hide-on-med-and-down">
          <li>
            <a href="/account">
              <i class="fa fa-user-circle" aria-hidden="true"></i> Mijn RoboBooth
            </a>
          </li>
        </ul>

        <ul class="side-nav" id="mobile-demo">
          <li>
            <a href="#">
              <i class="fa fa-user-circle" aria-hidden="true"></i> Mijn RoboBooth
            </a>
          </li>
        </ul>
      </div>
    </nav>

  {{/if}}

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js" integrity="sha256-uWtSXRErwH9kdJTIr1swfHFJn/d/WQ6s72gELOHXQGM=" crossorigin="anonymous"></script>

  <main>
    {{{body}}}
  </main>

  <script>
    $(document).ready(() => {
      $(".button-collapse").sideNav();
    })
  </script>
</body>

</html>
